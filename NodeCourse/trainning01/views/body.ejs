<%- include('includes/head.ejs') %>
</head>
<body>
    <main>
        <form class="shape-form" action="/submit" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title">
                
                <img class="shapes-control" src="https://cdn.mathblog.com/wp-content/uploads/2017/03/3-13.gif"/>
                
                <label for="shape">Select the shape you want to calculate</label>
                <select name="shape">
                    <option value="">--Choose an option--</option>
                    <option value="Square">Square</option>
                    <option value="Triangle">Triangle</option>
                    <option value="Rectangle">Rectangle</option>
                    <option value="Circle">Circle</option>
                    <option value="Parallelogram">Parallelogram</option>
                    <option value="Trapezoid">Trapezoid</option>
                </select>
                <div class="input-control">
                    <label for="value1">Enter dimension 1</label>    
                    <input type="number" step="0.01" name="value1">
                    <label for="value2">Enter dimension 2</label>    
                    <input type="number" step="0.01" name="value2">
                </div>
                
            </div>
            <button class="submit-control"type="submit">Calculate area</button>
        </form>
    </main>
<%- include('includes/end.ejs') %>